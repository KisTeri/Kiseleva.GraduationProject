@using Kiseleva.GraduationProject.Areas.Identity.Data
@using Kiseleva.GraduationProject.Entities
@model ApplicationUser

@{
    ViewData["Title"] = "Delete Page";
}

<body class="body2">
    <form method="post" asp-action="DeleteUser" enctype="multipart/form-data">
    
            <a asp-controller="User" asp-action="Index"><p style="font-size:90%; margin-top: 30px;">Вернуться обратно</p></a>
     
            <h3>Удаление</h3>

            <h6>Вы уверены, что хотите удалить этого работника?</h6>

            <p>@Model.LastName @Model.FirstName @Model.MiddleName</p>
    </form>

    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Удалить" class="btn btn-outline-danger" />                
    </form>
   
</body>



