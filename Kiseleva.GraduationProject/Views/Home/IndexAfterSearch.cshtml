
@using Kiseleva.GraduationProject.Entities
@using Kiseleva.GraduationProject.Models
@model List<Person>


<body class="body2">
    <a asp-controller="Home" asp-action="Index"><p style="font-size:90%; margin-top: 30px;">Вернуться на Главную</p></a>

        <div class="people-list">
            <p class="text1">№</p>
            <div class="verticalLine2"><a class="cleaning2"></a></div>
            <p class="text2" style="color: white!important">ФИО/Название</p>
        </div>

        
            @foreach (var item in Model)
            {
                <div class="people-list2">
                    <p class="text1">@item.Id</p>
                    <div class="verticalLine2"><a class="cleaning2"></a></div>
                    <a class="text2" asp-controller="Person" asp-action="Card" asp-route-id="@item.Id">@item.FullName</a>
                    <a asp-controller="Person" asp-action="EditPerson" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-left: 450px;">
                        <i class="bi bi-pen"></i>
                    </a>

                    <a class="btn btn-outline-danger" asp-controller="Person" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash3"></i>
                    </a>

                    <a class="btn btn-outline-success" asp-controller="Contract" asp-action="CreateContract" asp-route-id="@item.Id">
                        <i class="bi bi-file-earmark"></i>
                    </a>

                    <a class="btn btn btn-outline-warning" asp-controller="Person" asp-action="_File" asp-route-id="@item.Id">
                        <i class="bi bi-download"></i>
                    </a>
                </div>
            }
        

        
            @foreach (var item in Model)
            {
                <div class="people-list2">
                    <p class="text1">@item.Id</p>
                    <div class="verticalLine2"><a class="cleaning2"></a></div>
                    <a class="text2" asp-controller="Organisation" asp-action="InformationAboutOrganisation" asp-route-id="@item.Id">@item.FullName</a>
                    <a asp-controller="Organisation" asp-action="EditOrganisation" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-left: 450px;">
                        <i class="bi bi-pen"></i>
                    </a>

                    <a class="btn btn-outline-danger" asp-controller="Organisation" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash3"></i>
                    </a>

                    <a class="btn btn-outline-success" asp-controller="Contract" asp-action="CreateOrganisationContract" asp-route-id="@item.Id">
                        <i class="bi bi-file-earmark"></i>
                    </a>

                    <a class="btn btn btn-outline-warning" asp-controller="Organisation" asp-action="File" asp-route-id="@item.Id">
                        <i class="bi bi-download"></i>
                    </a>
                </div>
            }
        

        
            @foreach (var item in @Model)
            {
                <div class="people-list2">
                    <p class="text1">@item.Id</p>
                    <div class="verticalLine2"><a class="cleaning2"></a></div>
                    <a class="text2" asp-controller="CZN" asp-action="InformationAboutCZN" asp-route-id="@item.Id">@item.FullName</a>
                    <a asp-controller="CZN" asp-action="EditCZN" asp-route-id="@item.Id" class="btn btn-outline-primary" style="margin-left: 450px;">
                        <i class="bi bi-pen"></i>
                    </a>

                    <a class="btn btn-outline-danger" asp-controller="CZN" asp-action="Delete" asp-route-id="@item.Id">
                        <i class="bi bi-trash3"></i>
                    </a>

                    <a class="btn btn btn-outline-warning" asp-controller="CZN" asp-action="File" asp-route-id="@item.Id">
                        <i class="bi bi-download"></i>
                    </a>
                </div>
            }
        
</body>


